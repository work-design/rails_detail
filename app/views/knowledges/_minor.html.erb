<div class="content">
  <div class="header">
    <%= knowledge.name %>
  </div>

  <div class="description">
    <%= ex_simple_format knowledge.minor.try(:body) %>
  </div>

  <div class="extra">
    <div class="left floated">
      <%= link_to '插入段落', new_knowledge_path(knowledge_id: knowledge, position: 1), :remote => true %>
      <span>丨</span><%= link_to '编辑内容', new_knowledge_minor_path(knowledge), remote: true %>
      <span>丨所有版本：</span><%= link_to knowledge.minor_records_count, knowledge_minors_path(knowledge) %>
    </div>

    <% if knowledge.minor %>
      <div class="right floated">
        <span>最近贡献：</span>
        <%= link_to knowledge.minor.commit.name, person_path(knowledge.minor.commit) %>
      </div>
    <% end %>
  </div>

</div>

