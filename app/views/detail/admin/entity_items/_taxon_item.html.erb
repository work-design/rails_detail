<tr id="taxon_item_<%= taxon_item.id %>">
  <td><%= taxon_item.id %></td>
  <td><%= taxon_item.item.name %></td>
  <td>
    <% if taxon_item.item.key == 'boolean' %>
      <div class="ui slider checkbox" id="checkbox_<%= taxon_item.item_id %>">
        <% if taxon_item.entity_item_id %>
          <%= check_box_tag nil, taxon_item.entity_item_id, true, data: { url: entity_item_path(params[:entity_type], params[:entity_id], taxon_item.entity_item_id) } %>
        <% else %>
          <%= check_box_tag '[entity_item]taxon_item_id', taxon_item.id, false, data: { url: entity_items_path(params[:entity_type], params[:entity_id]) } %>
        <% end %>
        <label></label>
      </div>
    <% else %>
      <%= link_to new_entity_item_path(params[:entity_type], params[:entity_id], taxon_item_id: taxon_item.id), remote: true do %>
        <div class="ui input">
          <%= text_field_tag nil, taxon_item.value, placeholder: 'Input Value', readonly: true, class: 'three wide field' %>
        </div>
      <% end %>
    <% end %>
  </td>
  <td>
    <%# link_to 'Edit', edit_entity_item_path(params[:entity_type], params[:entity_id]), remote: true, class: 'ui pink label' %>
    <%# link_to 'Destroy', entity_item_path(params[:entity_type], params[:entity_id]), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'ui red label' %>
  </td>
</tr>