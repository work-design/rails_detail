<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= List.human_attribute_name(:name) %></th>
      <th><%= List.human_attribute_name(:position) %></th>
      <th>
        <%= link_to new_admin_list_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.position %></td>
      <td>
        <%= link_to '详细', admin_list_items_path(list) %>
        <%= link_to '编辑', edit_admin_list_path(list), remote: true %>
        <%= link_to '删除', admin_list_path(list), method: :delete, data: { confirm: t('.confirm') } %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @lists %>
