<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>
        <%= link_to new_admin_taxon_item_path(params[:taxon_type], params[:taxon_id]), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody id="taxon_item_tbody">
  <% @items_hash.each do |list, items| %>
    <tr id="taxon_list_<%= list.id %>">
      <td colspan="3">
        <%= list.name %>
        <%= link_to list_admin_taxon_item_path(params[:taxon_type], params[:taxon_id], list_id: list.id), remote: true, class: 'button is-small' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </td>
    </tr>
    <% items.each do |item| %>
      <%= render partial: 'taxon_item', locals: { taxon_item: item } %>
    <% end %>
  <% end %>
  </tbody>
</table>
