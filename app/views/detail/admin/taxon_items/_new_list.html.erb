<tr data-controller="input">
  <% uid = rand(99999) %>
  <td>
    <%= form_with model: @taxon_item, url: admin_taxon_items_path, remote: true, id: "taxon_item_new_#{uid}" do %>
      <div class="select field is-narrow">
        <%= select_tag 'taxon_item[item_id]', options_for_select(@items), form: "taxon_item_new_#{uid}" %>
      </div>
    <% end %>
  </td>
  <td>
    <%= submit_tag t('.save'), class: 'button is-primary', form: "taxon_item_new_#{uid}" %>
    <a class="button is-danger" data-action="input#remove">取消</a>
  </td>
</tr>
