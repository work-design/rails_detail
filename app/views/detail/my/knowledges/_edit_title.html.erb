<%= form_with theme: nil, model: [:my, @knowledge], class: 'field is-horizontal' do |f| %>
  <div class="field-body">
    <div class="field">
      <%= f.text_field :title, class: 'input' %>
    </div>
    <div class="field is-narrow">
      <%= f.submit '确定', class: 'button is-primary' %>
      <%= link_to '取消', cancel_path, class: 'button is-light' %>
    </div>
  </div>
<% end %>
