<div id="search-content">
  <%= form_with theme: nil, scope: nil, url: { action: 'search' }, html: { style: 'width: 100%;' } do |f| %>
    <div class="control has-icons-left">
      <%= f.search_field 'title-like', class: 'input', placeholder: '搜索', data: { controller: 'typer' } %>
      <span class="icon is-left"><i class="fa-solid fa-search"></i></span>
    </div>
  <% end %>
</div>
<% @knowledges.each do |knowledge| %>
  <%= render partial: 'knowledge', locals: { knowledge: knowledge } %>
<% end %>
