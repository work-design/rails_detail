<div class="three wide column">
  <%= render 'admin/detail/nav' %>
</div>


  <div class="ui top attached menu borderless">
    <div class="item">
      <% if @knowledge.parent.blank? %>
        <%= link_to admin_knowledges_path do %>
          <i class="caret left icon"></i>
          <%= @knowledge.name %>
        <% end %>
      <% else %>
        <%= link_to admin_knowledge_path(@knowledge.parent) do %>
          <i class="caret left icon"></i>
          <%= @knowledge.name %>
        <% end %>
      <% end %>
    </div>
  </div>

  <table class="ui attached definition table">
    <tbody>
    <% @knowledge.children.each do |knowledge| %>
      <tr class="active">
        <td class="center aligned one wide">
          <i class="caret down icon"></i>
        </td>
        <%= render partial: 'td', locals: { knowledge: knowledge } %>
      </tr>
      <% knowledge.children.each do |child| %>
      <tr>
        <td class="center aligned">
          <i class="caret right icon"></i>
        </td>
        <%= render partial: 'td', locals: { knowledge: child } %>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

