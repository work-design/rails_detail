<aside class="menu">
  <% @knowledge.self_and_siblings.each do |sibling| %>
    <%= link_to knowledge_path(sibling), class: active_helper(id: sibling.id, active: 'menu-label is-active', item: 'menu-label') do %>
      <span><%= sibling.title %></span>
    <% end %>
    <ul class="menu-list" class="<%= (sibling.child_ids + [sibling.id]).include?(params[:id]) ? 'is-active' : '' %>">
    <% sibling.children.each do |child| %>
      <li><%= link_to child.title, knowledge_path(child), class: active_helper(id: child.id, active: 'is-active') %></li>
    <% end %>
    </ul>
  <% end %>
</aside>
