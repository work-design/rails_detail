<div class="breadcrumb has-succeeds-separator">
  <ul>
    <li><%= link_to '百科频道', knowledges_path %></li>
    <% @knowledge.ancestors.each do |knowledge| %>
      <li><%= link_to knowledge.title, knowledge_path(knowledge) %></li>
    <% end %>
    <li class="is-active"><%= @knowledge.title %></li>
  </ul>
</div>

<div class="level">
  <div class="level-item">
    <h1 class="title has-text-centered"><%= @knowledge.title %></h1>
  </div>
  <div class="level-item is-narrow">
    <%= link_to '新建', new_my_knowledge_path(parent_id: @knowledge) %>
  </div>
</div>

<div class="box">
  <div class="content" id="knowledge_content_<%= @knowledge.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
    <%= @knowledge.body %>
    <%= link_to edit_my_knowledge_path(@knowledge, edit: 'content'), class: 'title-edit', style: 'visibility: hidden', data: { show_target: 'item' } do %>
      <i class="fa-light fa-pencil"></i>
    <% end %>
  </div>
</div>

<div>
<% @knowledge.children.each do |child| %>
  <div><%= child.title %></div>
<% end %>
</div>
